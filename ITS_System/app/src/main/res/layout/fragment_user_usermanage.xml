            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:src="@mipmap/bus_car_number"/>
        <TextView
            android:id="@+id/manage_account_two"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_height="match_parent"
            android:text="余额：0"/>
        <CheckBox
            android:id="@+id/manage_check_two"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/recharge_btn_two"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="充值"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/car_layout_3"
