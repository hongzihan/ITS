<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="its.hzh.com.its_system">

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/bus_top_left"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name=".viewpage.ViewPageActivity"
            android:screenOrientation ="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:screenOrientation ="landscape"/>
        <activity android:name=".userPage.LoginActivity"
            android:screenOrientation ="landscape"/>
        <activity android:name=".userPage.RegisterActivity"
            android:screenOrientation ="landscape"/>
        <activity android:name=".userPage.FindPasswordActivity"
            android:screenOrientation ="landscape"/>
        <activity android:name=".userMain.UserMainActivity"
            android:screenOrientation ="landscape"/>
    </application>

</manifest>